<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sman1balung.www.smabacofinal142.ListGuruActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lyoutpelajaran"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="jadwal mengajar"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:padding="10dp"
            android:id="@+id/texjadwal"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/spnjammengajar"></Spinner>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorKuning"
            android:dividerHeight="5dp"
            android:id="@+id/lstmapel">

        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lyoutguru">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cari Nama Guru"

            android:id="@+id/edtGuru"
            />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorKuning"
            android:dividerHeight="5dp"

            android:id="@+id/lstGuru">

        </ListView>
    </LinearLayout>

</LinearLayout>
